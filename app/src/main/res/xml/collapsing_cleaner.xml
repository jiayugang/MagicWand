<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
            motion:constraintSetEnd="@id/collapsed"
            motion:constraintSetStart="@id/expanded">

        <OnSwipe
                motion:dragDirection="dragUp"
                motion:touchAnchorId="@id/list"
                motion:touchAnchorSide="top"/>

        <KeyFrameSet>
            <KeyAttribute
                    motion:framePosition="60"
                    motion:motionTarget="@id/toolbar_image">
                <CustomAttribute
                        motion:attributeName="imageAlpha"
                        motion:customIntegerValue="255"/>
            </KeyAttribute>
            <KeyAttribute
                    motion:framePosition="90"
                    motion:motionTarget="@id/toolbar_image">
                <CustomAttribute
                        motion:attributeName="imageAlpha"
                        motion:customIntegerValue="0"/>
            </KeyAttribute>

            <KeyAttribute
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    motion:framePosition="0"
                    motion:motionTarget="@id/tittle"/>
            <KeyAttribute
                    android:scaleX="1.0"
                    android:scaleY="1.0"
                    motion:framePosition="100"
                    motion:motionTarget="@id/tittle"/>

            <KeyAttribute
                    android:scaleX="1.0"
                    android:scaleY="1.0"
                    motion:framePosition="0"
                    motion:motionTarget="@id/home_button"/>
            <KeyAttribute
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    motion:framePosition="100"
                    motion:motionTarget="@id/home_button"/>
        </KeyFrameSet>
    </Transition>


    <ConstraintSet android:id="@+id/expanded">
        <Constraint
                android:id="@id/toolbar_image"
                android:layout_width="0dp"
                android:layout_height="@dimen/cleaner_top_height"
                motion:layout_constraintBottom_toTopOf="@+id/list"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"/>

        <Constraint
                android:id="@+id/clean_tips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/home_button"/>
        <Constraint
                android:id="@+id/clean_mem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:alpha="1"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/clean_tips"
                motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
                android:id="@+id/clean_cache"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:alpha="1"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/clean_mem"/>
        <Constraint
                android:id="@+id/one_key_clear"
                android:layout_width="180dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:alpha="1"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintBottom_toTopOf="@+id/meminfo_tips"/>
        <Constraint
                android:id="@+id/meminfo_tips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:alpha="1"
                motion:layout_constraintBottom_toBottomOf="@+id/toolbar_image"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
                android:id="@id/toolbar_image"
                android:layout_width="0dp"
                android:layout_height="@dimen/action_bar_height"
                motion:layout_constraintBottom_toTopOf="@+id/list"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"/>
        <Constraint
                android:id="@+id/clean_tips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/home_button"/>
        <Constraint
                android:id="@+id/clean_mem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:alpha="0"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/clean_tips"
                motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
                android:id="@+id/clean_cache"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:alpha="0"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/clean_mem"/>
        <Constraint
                android:id="@+id/one_key_clear"
                android:layout_width="180dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:alpha="0"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintBottom_toTopOf="@+id/meminfo_tips"/>
        <Constraint
                android:id="@+id/meminfo_tips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:alpha="0"
                motion:layout_constraintBottom_toBottomOf="@+id/toolbar_image"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"/>
    </ConstraintSet>
</MotionScene>