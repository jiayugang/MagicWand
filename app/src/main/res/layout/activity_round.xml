<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.RoundActivity">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/image"
            android:layout_marginTop="40dp"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.android.magic.wand.view.RoundedImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/image"
            android:layout_marginTop="80dp"
            android:id="@+id/imageView1"
            android:scaleType="fitXY"
            app:left_top="20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <com.android.magic.wand.view.RoundedImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/image"
            android:layout_marginStart="1dp"
            android:id="@+id/imageView2"
            android:scaleType="fitXY"
            app:right_top="20"
            app:layout_constraintTop_toTopOf="@+id/imageView1"
            app:layout_constraintStart_toEndOf="@+id/imageView1"/>
    <com.android.magic.wand.view.RoundedImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/image"
            android:layout_marginTop="1dp"
            android:id="@+id/imageView3"
            android:scaleType="fitXY"
            app:left_bottom="20"
            app:layout_constraintStart_toStartOf="@+id/imageView1"
            app:layout_constraintTop_toBottomOf="@+id/imageView1"/>
    <com.android.magic.wand.view.RoundedImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/image"
            android:layout_marginTop="1dp"
            android:id="@+id/imageView4"
            android:scaleType="fitXY"
            app:right_bottom="20"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"/>

    <com.android.magic.wand.view.RoundedImageView
            android:id="@+id/round2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/aa"
            app:left_top="20"
            app:right_top="20"
            app:left_bottom="20"
            app:right_bottom="20"
            app:layout_constraintBottom_toTopOf="@+id/round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.shehuan.niv.NiceImageView
            android:id="@+id/round"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/aa"
            app:corner_top_left_radius="20dp"
            app:corner_top_right_radius="20dp"
            app:corner_bottom_left_radius="20dp"
            app:corner_bottom_right_radius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
</androidx.constraintlayout.widget.ConstraintLayout>